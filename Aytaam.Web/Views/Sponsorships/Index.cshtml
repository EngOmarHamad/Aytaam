                function ShowShareModel(Id) {
                    $.ajax({
                        type: 'POST',
                        url: '/Sponsorships/RenderShareSponsorship',
                        data: { Id },
                        success: function (layout) {
                            if (layout.status == 0) {
                                toastr.error(layout.msg);
                            }
                            else {
                                $("#kt_modal_baseModel").html(layout);
                                $("#kt_modal_baseModel").modal("show");
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log(error)
                            console.log(xhr)
                            console.log(status)
                        }
                    });
                }
                function DownLoadSponsorship(Id, Name) {
                    $.ajax({
                        type: 'GET',
                        url: '/Sponsorships/DownLoadSponsorship/' + Id,
                        xhrFields: {
                            responseType: 'blob'
                        },
                        success: function (data) {

                            var blob = new Blob([data], { type: "application/octetstream" });
                            var isIE = false || !!document.documentMode;
                            if (isIE) {
                                window.navigator.msSaveBlob(blob, Name + ".pdf");
                            } else {
                                var url = window.URL || window.webkitURL;
                                var link = url.createObjectURL(blob);
                                var a = $("<a />");
                                a.attr("download", Name + ".pdf");
                                a.attr("href", link);
                                $("body").append(a);
                                a[0].click();
                                $("body").remove(a);


                            }
                            var catTable = $('#kt_table_Sponsorships').dataTable();
                            catTable.fnDraw();
                        },
                        error: function (xhr, status, error) {
                            console.log(error)
                            console.log(xhr)
                            console.log(status)
                        }
                    });
                }

