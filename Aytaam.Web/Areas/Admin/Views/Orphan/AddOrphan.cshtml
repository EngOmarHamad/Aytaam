@using Aytaam.Core.ViewModels.Orphans;
@model AddOrphanViewModel
@{
    ViewData["Title"] = "إضافة يتيم";
    AppToolBarViewModel appToolBarViewModel = new()
            {
                Title = ViewData["title"]?.ToString(),
                BreadcrumbLinks = new List<Link>()
                {
                    new Link(){ Url="",Title="الصفحة الرئيسية"},
                    new Link(){ Url="",Title="إضافة يتيم"}
                }
            };
}
@section AppToolBar {
    <partial name="Partials/Layout/_AppToolBar" model="appToolBarViewModel" />
    }
@section Styles {
    @if (Model.Dto?.ImagePath is null)
    {
        <style>
            .image-input-placeholder, .image-input-wrapper {
                background-image: url('/assets/media/svg/files/blank-image.svg');
                background-position: center;
                background-size: contain !important;
            }

            [data-bs-theme="dark"] .image-input-placeholder, [data-bs-theme="dark"] .image-input-wrapper {
                background-image: url('/assets/media/svg/files/blank-image-dark.svg');
                background-position: center;
                background-size: contain !important;
            }
        </style>
    }
    else
    {

        <style>
            .image-input-placeholder, .image-input-wrapper {
                background-image: url( @Model.Dto.ImagePath.Replace("\\", "/") );
                background-position: center;
                background-size: contain !important;
            }

            [data-bs-theme="dark"] .image-input-placeholder, [data-bs-theme="dark"] .image-input-wrapper {
                background-image: url( @Model.Dto.ImagePath.Replace("\\", "/") );
                background-position: center;
                background-size: contain !important;
            }</style>
    }
    <style>
        .flatpickr-wrapper {
            width: 100%;
        }

        .svg-icon {
            z-index: 10;
        }
    </style>
    }
@section Scripts {
    <script src="~/assets/js/custom/orphan/addorphan.js" asp-append-version="true"></script>
    <script src="~/assets/js/custom/ar.js"></script>
    <script src="~/assets/js/custom/files/upload.js" asp-append-version="true"></script>

    }

<div class="modal fade" id="kt_modal_baseModel" tabindex="-1" aria-hidden="true"></div>

<div class="card card-flush">
    <div class="card-body">
        <form id="kt_add_orphan_form" class="form" action="#">
            <div class="row fv-row mb-7">
                <div class="col-md-2 text-md-end">
                    <label class="fs-6 fw-semibold form-label mt-3">
                        <span class="required">صورة اليتيم</span>
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="ضع صورة للإعلان"></i>
                    </label>
                </div>
                <div class="col-md-10">
                    <label class="d-block fw-semibold fs-6 mb-5"></label>
                    <input class="d-block fw-semibold fs-6 mb-5" type="hidden" asp-for="Dto.Code" id="Code" name="Code">
                    <div class="image-input image-input-outline image-input-placeholder image-input-empty" data-kt-image-input="true">
                        <div class="image-input-wrapper w-300px h-200px">
                        </div>
                        <label class="btn btn-icon btn-circle btn-active-color-warning w-25px h-25px bg-body shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" aria-label="Change avatar" data-bs-original-title="Change avatar" data-kt-initialized="1">
                            <i class="bi bi-pencil-fill fs-7"></i>
                            <input id="Image" asp-for="Dto.Image" id="Image" name="Image" data-kt-image-input-file="image" accept=".png,.jpg,.jpeg" />
                            <input type="hidden">
                        </label>
                        <span class="btn btn-icon btn-circle btn-active-color-warning w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" aria-label="Cancel avatar" data-bs-original-title="Cancel avatar" data-kt-initialized="1">
                            <i class="bi bi-x fs-2"></i>
                        </span>
                        <span class="btn btn-icon btn-circle btn-active-color-warning w-25px h-25px bg-body shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" aria-label="Remove avatar" data-bs-original-title="Remove avatar" data-kt-initialized="1">
                            <i class="bi bi-x fs-2"></i>
                        </span>
                    </div>
                    <div class="form-text">أنواع الملفات المسموح بها: png، jpg، jpeg.</div>
                </div>
            </div>

            <div class="row fv-row mb-7">
                <div class="col-md-2 text-md-end">
                    <label class="fs-6 fw-semibold form-label mt-3">
                        <span class="required">إسم اليتيم </span>
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="إسم اليتيم."></i>
                    </label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Dto.FullName" id="FullName" name="FullName" class="form-control" />
                </div>
            </div>
            <div class="row fv-row mb-7">
                <div class="col-md-2 text-md-end">
                    <label class="fs-6 fw-semibold form-label mt-3">
                        <span class="required">رقم هوية اليتيم </span>
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="رقم هوية اليتيم."></i>
                    </label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Dto.NationalIdNumber" id="NationalIdNumber" name="NationalIdNumber" class="form-control" />
                </div>
            </div>
            <div class="row fv-row mb-7">
                <div class="col-md-2 text-md-end">

                    <label class="fs-6 fw-semibold form-label mt-3">
                        <span class="required">حالة اليتيم</span>
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="حدد حالة اليتيم"></i>
                    </label>

                </div>
                <div class="col-md-10   ">
                    <div class="w-100 d-flex justify-content-center align-items-center gap-4">
                        <select class="form-select" asp-for="Dto.OrphanType" id="OrphanType" name="OrphanType" asp-items="Model.OrphanTypes" data-control="select2" data-hide-search="true" data-placeholder="اختر حالة اليتيم">
                            <option></option>
                        </select>

                    </div>
                </div>
            </div>
            <div class="row fv-row mb-7">
                <div class="col-md-2 text-md-end">
                    <label class="fs-6 fw-semibold form-label mt-3">
                        <span>حالة الكفالة</span>
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="حدد حالة الكفالة"></i>
                    </label>
                </div>
                <div class="col-md-10">
                    <div class="w-100">
                        <select class="form-select " asp-for="Dto.SponsorshipType" name="SponsorshipType" id="SponsorshipType" asp-items="Model.SponsorshipTypes" data-control="select2" data-hide-search="true" data-placeholder="Select a layout">
                            <option></option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row fv-row mb-7">
                <div class="col-md-2 text-md-end">
                    <label class="fs-6 fw-semibold form-label mt-3">
                        <span class="required">تاريخ الميلاد</span>
                        <i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="حدد تاريخ الميلاد"></i>
                    </label>
                </div>
