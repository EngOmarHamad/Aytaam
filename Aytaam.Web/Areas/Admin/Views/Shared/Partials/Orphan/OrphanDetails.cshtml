@using Aytaam.Core.Dtos.Orphans
@model OrphanDto
<div class="modal-dialog modal-dialog-centered mw-700px">

    <div class="modal-content">

        <div class="modal-header" id="kt_modal_Sponsorship_details_header">

            <h2 class="fw-bold"> تفاصيل اليتيم</h2>


            <div class="btn btn-icon btn-sm btn-active-icon-success" data-kt-Sponsorships-modal-action="close">

                <span class="svg-icon svg-icon-1">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                        <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                    </svg>
                </span>

            </div>

        </div>


        <div class="modal-body scroll-y  my-7">
            <!--begin::Form-->
            <!--begin::Scroll-->

            <div class="scroll-y me-n7 px-7" id="kt_modal_Sponsorship_details_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_Sponsorship_details_header" data-kt-scroll-wrappers="#kt_modal_Sponsorship_details_scroll" data-kt-scroll-offset="300px">

                <!--begin::Feature post-->
                <div class="card-xl-stretch mx-md-3">

                    <!--end::Image-->

                    <div class="m-0">

                        <a class="fs-4 text-dark fw-bold text-hover-success text-dark lh-base"> إسم اليتيم :@Model.FullName</a>
                        <div class="fw-semibold fs-5 text-gray-600 text-dark my-4"> عمر اليتيم : @(DateTime.Now - Model.DateOfBirth)</div>
                        <div class="fw-semibold fs-5 text-gray-600 text-dark my-4">
                            <span class="text-muted">السكن : @Model.Residence</span>
                        </div>

                        <div class="fs-6 fw-bold">
                            <a class="text-gray-700 text-hover-success"> الحالة الطبية : @Model.MedicalCondition</a>
                        </div>
                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Feature post-->
            </div>


            <div class="text-center pt-15">
                <button type="reset" class="btn btn-light me-3" data-kt-Sponsorships-modal-action="cancel">
                    إغلاق
                </button>
            </div>


        </div>

    </div>

</div>
