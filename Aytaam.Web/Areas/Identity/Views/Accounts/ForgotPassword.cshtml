@model string
<div class="row m-0 p-0 justify-content-center min-vh-100 align-items-center bg-light">
    <div class="col">
        <div class="bg-body  shadow-sm align-items-center d-flex flex-column flex-center rounded-4 w-md-600px mx-auto p-7">
            <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
                <div class="d-flex flex-center flex-column-fluid pb-15">
                    <form asp-action="ForgotPassword" method="post" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" novalate="novalate" id="kt_password_reset_form">
                        <div class="d-flex  justify-content-center flex-column align-items-center">
                            <img class="theme-light-show mx-auto mw-100 w-100px w-lg-150px" src="~/assets/Images/Logo.png" asp-append-version=true alt="">
                            <img class="theme-dark-show mx-auto mw-100  w-100px w-lg-150px" src="~/assets/Images/Logo.png" asp-append-version=true alt="">
                            <h5 class="opacity-75-hover text-success me-1 mb-10">أَهْلًا وَسَهْلًا بِكُم فِي مَوْقِع الرَّايَة</h5>

                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="text-center mb-10">
                            <h1 class="text-dark fw-bolder mb-3">هل نسيت كلمة السر ؟</h1>
                            <div class="text-gray-500 fw-semibold fs-6">. أدخل بريدك الإلكتروني لإعادة تعيين كلمة المرور الخاصة بك</div>
                        </div>
                        <div class="fv-row mb-8 fv-plugins-icon-container">
                            <input autocomplete="off" class="form-control bg-transparent" type="email" id="email" name="email" value="@Model" required>
                            <div class="fv-plugins-message-container inval-feedback"></div>
                        </div>
                        <div class="d-flex flex-wrap justify-content-center pb-lg-0">
                            <button type="submit" id="kt_password_reset_submit" class="btn btn-success me-4">
                                <span class="indicator-label">إرسال</span>
                                <span class="indicator-progress">
                                    ... انتظر من فضلك
                                    <span class="spinner-border spinner-border-sm align-mdle ms-2"></span>
                                </span>
                            </button>
                            <a asp-action="Login" class="btn btn-light">إلغاء</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/assets/js/custom/authentication/reset-password/reset-password.js" asp-append-version="true"></script>
}
